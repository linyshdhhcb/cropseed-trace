<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linyi.cropseed.trace.module.system.mapper.SysUserMapper">

    <!-- 根据用户名查询用户 -->
    <select id="getUserByUsername" parameterType="string" resultType="com.linyi.cropseed.trace.module.system.model.entity.SysUser">
        SELECT * FROM sys_user 
        WHERE username = #{username} AND deleted_flag = 0
    </select>

</mapper>


