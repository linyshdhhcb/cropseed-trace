<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.linyi.cropseed.trace.module.trace.mapper.TraceEntityMapper">

    <!-- 根据实体类型查询 -->
    <select id="selectByEntityType" resultType="com.linyi.cropseed.trace.module.trace.model.entity.TraceEntity">
        SELECT * FROM trace_entity
        WHERE entity_type = #{entityType} AND deleted_flag = 0
        ORDER BY create_time DESC
    </select>

    <!-- 根据实体编码查询 -->
    <select id="selectByEntityCode" resultType="com.linyi.cropseed.trace.module.trace.model.entity.TraceEntity">
        SELECT * FROM trace_entity
        WHERE entity_code = #{entityCode} AND deleted_flag = 0
        LIMIT 1
    </select>

</mapper>
